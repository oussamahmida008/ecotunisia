<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme (Dark) -->
    <style name="Theme.EcoExplorer" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/eco_green_light</item>
        <item name="colorPrimaryVariant">@color/eco_green_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/eco_blue_light</item>
        <item name="colorSecondaryVariant">@color/eco_blue_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/eco_green_dark</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/black</item>
        <item name="colorSurface">#121212</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
    </style>
</resources>
